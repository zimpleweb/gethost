---
// src/pages/webhosting.astro
import BaseLayout from '../components/layout/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

import ProductHero from '../components/ProductHero.astro';
import Pakketten from '../components/Pakketten.astro';
import WebhostingStart from '../components/WebhostingStart.astro';
import WebhostingText from '../components/WebhostingText.astro';
import WebhostingPerks from '../components/WebhostingPerks.astro';

import SupportCTA from '../components/SupportCTA.astro';
import WebhostingFAQ from '../components/WebhostingFAQ.astro';
---

<BaseLayout
  title="Webhosting - Bliksnel, Veilig & Nederlands | GetHost"
  description="De beste webhosting in Nederland met NVMe SSD, LiteSpeed Enterprise, gratis verhuisservice en échte Nederlandse support. Al vanaf €20/jaar."
>
  <Header slot="header" />

  <!-- Product hero: dark background met key benefits en illustratie -->
  <ProductHero />

  <!-- Pricing packages met tabs en detailed feature toggle -->
  <Pakketten />

  <!-- Drie-stappen onboarding -->
  <WebhostingStart />

  <!-- Security + duurzaamheid -->
  <WebhostingText />

  <!-- Perks / wat krijg je bij je pakket -->
  <WebhostingPerks />

  <!-- Support CTA -->
  <SupportCTA />

  <!-- Webhosting-specifieke FAQ -->
  <WebhostingFAQ />

  <!-- Footer -->
  <Footer slot="footer" />
</BaseLayout>