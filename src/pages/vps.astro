---
// src/pages/vps.astro
import BaseLayout from '../components/layout/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import SupportCTA from '../components/SupportCTA.astro';
import FAQAccordion from '../components/FAQAccordion.astro'; // of later VPSFAQ.astro

import VPSHero from '../components/VPSHero.astro';
import VPSPricing from '../components/VPSPricing.astro';
import VPSAddons from '../components/VPSAddons.astro';
import WhyVPS from '../components/WhyVPS.astro';
---

<BaseLayout
  title="VPS Hosting - Volledige controle & maximale prestaties | GetHost"
  description="Krachtige KVM VPS met NVMe SSD, root-toegang en keuze uit Nederland of Duitsland. Volledig schaalbaar, 24/7 support en optioneel beheerd."
>
  <Header slot="header" />

  <VPSHero />
  <VPSPricing />
  <VPSAddons />
  <WhyVPS />

  <SupportCTA />
  <FAQAccordion />   <!-- vervang eventueel door <VPSFAQ /> als je aparte FAQ maakt -->
  
  <Footer slot="footer" />
</BaseLayout>