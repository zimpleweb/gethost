<section id="webhosting-pakketten" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-dark">
      Kies jouw webhosting pakket
    </h2>
    <p class="text-center text-gray mb-12 max-w-2xl mx-auto">
      Alle pakketten met onbeperkt verkeer, NVMe SSD, LiteSpeed, gratis SSL en backups
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Starter -->
      <div class="relative bg-white border-2 border-gray-200 rounded-2xl p-8 hover:shadow-2xl hover:border-primary transition-all duration-300 flex flex-col">
        <h3 class="text-2xl font-bold text-dark text-center mb-3">Starter</h3>
        <p class="text-sm text-gray-600 text-center mb-6">Voor starters & blogs</p>
        <div class="text-center mb-8">
          <span class="text-5xl font-bold text-primary">€2,95</span>
          <span class="text-gray-600 text-lg">/maand</span>
        </div>
        <ul class="space-y-4 text-sm flex-1">
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> 1 domein</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Onbeperkt verkeer</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> 25 GB NVMe SSD</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Gratis SSL</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Dagelijkse backups</li>
        </ul>
        <a href="https://account.gethost.nl" target="_blank" class="mt-8 w-full bg-primary text-white hover:bg-primary-dark py-4 rounded-xl font-semibold text-center transition">
          Bestellen
        </a>
      </div>

      <!-- Pro – Populairste -->
      <div class="relative bg-gradient-to-br from-primary/5 to-white border-2 border-primary rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-300 flex flex-col ring-4 ring-primary/10">
        <div class="absolute -top-5 left-1/2 -translate-x-1/2 bg-primary text-white px-6 py-2 rounded-full text-sm font-bold shadow-lg">
          Populairste keuze
        </div>
        <h3 class="text-2xl font-bold text-dark text-center mb-3">Pro</h3>
        <p class="text-sm text-gray-600 text-center mb-6">Voor websites & kleine shops</p>
        <div class="text-center mb-8">
          <span class="text-5xl font-bold text-primary">€4,95</span>
          <span class="text-gray-600 text-lg">/maand</span>
        </div>
        <ul class="space-y-4 text-sm flex-1">
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Onbeperkt domeinen</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Onbeperkt verkeer</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> 100 GB NVMe SSD</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Gratis Imunify360</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> LiteSpeed + caching</li>
        </ul>
        <a href="https://account.gethost.nl" target="_blank" class="mt-8 w-full bg-primary text-white hover:bg-primary-dark py-4 rounded-xl font-semibold text-center transition shadow-lg">
          Bestellen
        </a>
      </div>

      <!-- Premium -->
      <div class="relative bg-white border-2 border-gray-200 rounded-2xl p-8 hover:shadow-2xl hover:border-primary transition-all duration-300 flex flex-col">
        <h3 class="text-2xl font-bold text-dark text-center mb-3">Premium</h3>
        <p class="text-sm text-gray-600 text-center mb-6">Voor webshops & grote sites</p>
        <div class="text-center mb-8">
          <span class="text-5xl font-bold text-primary">€7,95</span>
          <span class="text-gray-600 text-lg">/maand</span>
        </div>
        <ul class="space-y-4 text-sm flex-1">
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Onbeperkt domeinen</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Onbeperkt verkeer</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> 250 GB NVMe SSD</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Gratis .nl domein 1 jaar</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Prioriteit support</li>
        </ul>
        <a href="https://account.gethost.nl" target="_blank" class="mt-8 w-full bg-primary text-white hover:bg-primary-dark py-4 rounded-xl font-semibold text-center transition">
          Bestellen
        </a>
      </div>

      <!-- Op maat -->
      <div class="relative bg-white border-2 border-gray-200 rounded-2xl p-8 hover:shadow-2xl hover:border-primary transition-all duration-300 flex flex-col">
        <h3 class="text-2xl font-bold text-dark text-center mb-3">Op maat</h3>
        <p class="text-sm text-gray-600 text-center mb-6">Voor agencies & high-traffic</p>
        <div class="text-center mb-8">
          <span class="text-4xl font-bold text-primary">Op aanvraag</span>
        </div>
        <ul class="space-y-4 text-sm flex-1">
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Dedicated resources optie</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Meerdere locaties (NL/DE)</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Managed hosting</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Custom caching/CDN</li>
          <li class="flex items-center gap-3"><iconify-icon icon="mdi:check-circle" class="text-green-600 text-xl"></iconify-icon> Agency dashboard</li>
        </ul>
        <a href="/klantenservice" class="mt-8 w-full bg-primary text-white hover:bg-primary-dark py-4 rounded-xl font-semibold text-center transition">
          Offerte aanvragen
        </a>
      </div>
    </div>
  </div>
</section>