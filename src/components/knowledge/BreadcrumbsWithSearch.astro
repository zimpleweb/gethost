---
// src/components/knowledge/BreadcrumbsWithSearch.astro
const { current } = Astro.props;
import SearchResults from './SearchResults.astro';
---
<section class="py-16 bg-[#0f0f0f]">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <nav class="text-white text-sm mb-10">
      <a href="/" class="hover:text-primary transition">Home</a>
      <span class="mx-2 text-gray-400">/</span>
      <a href="/kennisbank" class="hover:text-primary transition">Kennisbank</a>
      {current && (
        <>
          <span class="mx-2 text-gray-400">/</span>
          <span class="text-primary font-medium">{current}</span>
        </>
      )}
    </nav>

    <div x-data="{ query: '' }" class="max-w-2xl mx-auto relative">
      <form @submit.prevent class="relative">
        <input 
          type="text" 
          x-model="query"
          placeholder="Zoeken in kennisbank..." 
          class="w-full px-6 py-4 bg-[#1a1a1a] border border-gray-700 rounded-xl text-white placeholder-gray-500 text-base focus:outline-none focus:border-primary focus:ring-4 focus:ring-primary/20 transition"
        />
        <button class="absolute right-2 top-1/2 -translate-y-1/2 bg-primary text-white px-8 py-3 rounded-lg font-medium hover:bg-primary-dark transition shadow-lg">
          Zoeken
        </button>
      </form>

      <SearchResults :query="query" />
    </div>
  </div>
</section>