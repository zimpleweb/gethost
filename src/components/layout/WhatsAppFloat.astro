---
// src/components/layout/WhatsAppFloat.astro
---

<a
  href="https://wa.me/31612345678"
  target="_blank"
  rel="noopener"
  class="fixed bottom-6 left-6 z-40 flex items-center gap-3 bg-green-500 hover:bg-green-600 text-white font-medium rounded-full shadow-2xl transition-all hover:scale-105 hover:shadow-xl group"
  aria-label="Chat op WhatsApp"
>
  <!-- Altijd zichtbaar: WhatsApp icoon -->
  <iconify-icon 
    icon="mdi:whatsapp" 
    class="text-3xl md:text-3xl flex-shrink-0"  <!-- iets groter op mobiel als je wilt -->
  ></iconify-icon>

  <!-- Tekst alleen zichtbaar op md en groter -->
  <span class="hidden md:inline pr-4 group-hover:pr-2 transition-all">
    WhatsApp
  </span>

  <!-- Dynamische padding: kleiner op mobiel (alleen icoon) -->
  <span class="sr-only">Chat op WhatsApp</span> <!-- screen reader support -->
</a>

<style>
  /* Optioneel: maak de knop op mobiel perfect rond en compacter */
  @media (max-width: 767px) {
    a {
      padding: 1rem;          /* ≈16px padding → puur icoon-knop */
      gap: 0;                 /* geen ruimte voor tekst */
    }
  }
</style>