---
// src/components/layout/Header.astro
import NavItems from '../nav/NavItems.astro';
import MobileMenu from '../ui/MobileMenu.astro';
---

<header
  id="header"
  class="bg-white sticky top-0 z-50 border-b border-gray-200"
>
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
    <div class="flex justify-between items-center h-20 md:h-16">

      <!-- Logo -->
      <a href="/" class="flex items-center flex-shrink-0">
        <img
          src="/images/logo.png"
          alt="GetHost"
          class="h-10 md:h-9 w-auto object-contain"
        />
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center flex-shrink-0 min-h-full">
        <NavItems />
      </nav>

      <!-- Mobiel menu -->
      <MobileMenu />
    </div>
  </div>
</header>

<style>
  @media (hover: hover) {
    .group:hover .group-hover\:opacity-100 { opacity: 1; }
    .group:hover .group-hover\:visible { visibility: visible; }
    .group:hover .group-hover\:pointer-events-auto { pointer-events: auto; }
  }
</style>