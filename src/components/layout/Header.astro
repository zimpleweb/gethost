---
// src/components/layout/Header.astro
import MobileMenu from '../ui/MobileMenu.astro';
---

<header
  id="header"
  class="bg-white sticky top-0 z-50 transition-all duration-300 border-b border-gray-200"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20 md:h-16">
     
      <!-- Logo -->
      <a href="/" class="flex items-center h-full">
        <img
          src="/images/logo.png"
          alt="GetHost"
          class="h-10 md:h-9 w-auto object-contain transition-all duration-300"
        />
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center space-x-8 h-full">
        <a href="/" class="text-dark hover:text-primary font-medium text-base transition-colors">Home</a>
        <a href="/domeinnamen" class="text-dark hover:text-primary font-medium text-base transition-colors">Domeinnamen</a>
        <a href="/webhosting" class="text-dark hover:text-primary font-medium text-base transition-colors">Webhosting</a>
        <a href="/webhosting-pro" class="text-dark hover:text-primary font-medium text-base transition-colors">Pro</a>
        <a href="/vps" class="text-dark hover:text-primary font-medium text-base transition-colors">VPS</a>

        <!-- SUPPORT DROPDOWN (terug naar oude versie) -->
        <div class="relative group">
          <a 
            href="/klantenservice" 
            class="text-dark hover:text-primary font-medium text-base transition-colors flex items-center gap-1"
          >
            Support
            <iconify-icon icon="mdi:chevron-down" class="text-xs transition-transform duration-300 group-hover:rotate-180"></iconify-icon>
          </a>

          <!-- Hover bridge -->
          <div class="absolute inset-x-0 top-full h-2 bg-transparent"></div>

          <!-- Dropdown -->
          <div 
            class="absolute top-[calc(100%+8px)] left-0 w-96 bg-white rounded-lg shadow-xl border border-gray-200 
                   opacity-0 invisible pointer-events-none 
                   group-hover:opacity-100 group-hover:visible group-hover:pointer-events-auto 
                   transition-all duration-200"
          >
            <div class="p-5 space-y-5">

<!-- ... binnen de dropdown, vervang alleen dit blok: -->
<div class="grid grid-cols-2 gap-4">
  <a href="tel:0612345678" class="flex items-center gap-3 p-3 rounded hover:bg-gray-50 transition">
    <iconify-icon icon="mdi:phone" class="text-primary text-xl"></iconify-icon>
    <span class="font-medium">06 12 34 56 78</span>
  </a>
  <a href="https://wa.me/31612345678" target="_blank" class="flex items-center gap-3 p-3 rounded hover:bg-gray-50 transition">
    <iconify-icon icon="mdi:whatsapp" class="text-primary text-xl"></iconify-icon>
    <span class="font-medium">WhatsApp</span>
  </a>
  <a href="mailto:info@gethost.nl" class="flex items-center gap-3 p-3 rounded hover:bg-gray-50 transition">
    <iconify-icon icon="mdi:email" class="text-primary text-xl"></iconify-icon>
    <span class="font-medium">info@gethost.nl</span>
  </a>
  <a href="https://t.me/GetHostSupport" target="_blank" class="flex items-center gap-3 p-3 rounded hover:bg-gray-50 transition">
    <iconify-icon icon="mdi:send" class="text-primary text-xl"></iconify-icon>
    <span class="font-medium">Telegram</span>
  </a>
</div>

              <!-- Veelgestelde vragen knop -->
              <a href="/veelgestelde-vragen" class="block w-full text-center bg-primary text-white hover:bg-primary-dark py-3 px-4 rounded-lg font-medium transition">
                Veelgestelde vragen
              </a>

              <!-- Openingstijden statisch (onderaan) -->
              <div class="text-center border-t border-gray-200 pt-4 text-xs text-gray-600">
                <p>Maandag t/m vrijdag van 09:00 - 17:00</p>
                <p class="text-gray-500">m.u.v. Nederlandse feestdagen</p>
              </div>
            </div>
          </div>
        </div>

        <a href="https://account.gethost.nl" target="_blank" rel="noopener"
           class="bg-primary text-white hover:bg-primary-dark px-5 py-2.5 rounded-lg font-medium text-sm transition-all">
          Account
        </a>
      </nav>

      <MobileMenu />
    </div>
  </div>
</header>

<!-- Geen live status script meer â€“ terug naar jouw oude simpele versie -->
<style>
  @media (hover: hover) {
    .group:hover .group-hover\:opacity-100 { opacity: 1; }
    .group:hover .group-hover\:visible { visibility: visible; }
    .group:hover .group-hover\:pointer-events-auto { pointer-events: auto; }
  }
</style>