<script>
  // === GLOBALE TOGGLE: ÉÉN KLIK = ALLE PANEELEN OPEN/SLUIT ===
  document.querySelectorAll('.toggle-details').forEach(button => {
    button.addEventListener('click', () => {
      const allPanels = document.querySelectorAll('.details-panel');
      const allButtons = document.querySelectorAll('.toggle-details');

      const isAnyOpen = Array.from(allPanels).some(panel => 
        panel.style.maxHeight && panel.style.maxHeight !== '0px'
      );

      allPanels.forEach((panel, index) => {
        if (isAnyOpen) {
          panel.style.maxHeight = '0';
          allButtons[index].textContent = 'Meer informatie';
        } else {
          panel.style.maxHeight = panel.scrollHeight + 'px';
          allButtons[index].textContent = 'Minder informatie';
        }
      });
    });
  });
</script>