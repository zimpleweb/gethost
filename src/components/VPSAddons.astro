<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-dark">
      Extra opties & add-ons
    </h2>
    <div class="grid md:grid-cols-2 gap-10 max-w-5xl mx-auto">
      <!-- Resources & Opslag -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-primary/10 to-primary/5 px-8 py-5">
          <h3 class="text-xl font-bold text-dark">Resources & Opslag</h3>
        </div>
        <div class="p-8 space-y-6">
          <div class="flex justify-between items-center">
            <span class="text-gray-700">1 GB extra RAM</span>
            <span class="font-semibold text-primary">€4,- /maand</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-700">1 extra vCPU</span>
            <span class="font-semibold text-primary">€6,- /maand</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-700">10 GB extra NVMe SSD</span>
            <span class="font-semibold text-primary">€2,- /maand</span>
          </div>
        </div>
      </div>

      <!-- Licenties & Beheer -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-primary/10 to-primary/5 px-8 py-5">
          <h3 class="text-xl font-bold text-dark">Licenties & Beheer</h3>
        </div>
        <div class="p-8 space-y-6">
          <div class="flex justify-between items-center">
            <span class="text-gray-700">DirectAdmin licentie</span>
            <span class="font-semibold text-primary">€5,- /maand</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-700">cPanel licentie</span>
            <span class="font-semibold text-primary">€14,- /maand</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-700">CloudLinux / Imunify360</span>
            <span class="font-semibold text-primary">€22,- /maand</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-gray-700">Monitoring 24/7</span>
            <span class="font-semibold text-primary">€15,- /maand</span>
          </div>
          <div class="flex justify-between items-center pt-4 border-t border-primary/20">
            <span class="font-bold text-dark">Volledig beheerd (Managed VPS)</span>
            <span class="font-bold text-primary text-xl">Vanaf €49,- /maand</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>